<Window x:Class="SkillBase.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillBase.ViewModels"
        xmlns:views="clr-namespace:SkillBase.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Margin="10 0 0 0" Padding="5" Command="{Binding AddSkill}">New skill</Button>
            </StackPanel>
            <ContentControl Content="{Binding SkillTreeUC}"></ContentControl>
        </DockPanel>
    </Grid>
</Window>
