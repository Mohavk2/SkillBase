<UserControl x:Class="SkillBase.Views.SkillUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkillBase.Views"
             xmlns:vm="clr-namespace:SkillBase.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <HierarchicalDataTemplate ItemsSource="{Binding SkillVMs}" DataType="{x:Type vm:SkillViewModel}">
        <StackPanel>
            <Label Content="{Binding Name}"/>
            <Label Content="{Binding Description}"/>
        </StackPanel>
    </HierarchicalDataTemplate>
</UserControl>
